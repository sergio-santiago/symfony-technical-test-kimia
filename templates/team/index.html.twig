{% extends 'base.html.twig' %}

{% block title %}Teams{% endblock %}

{% block body %}
    <h2>Teams</h2>

    <h3><a href="{{ path('team_new') }}">Create new team</a></h3>

    <table class="table" border="1" style="border-collapse: collapse; width:100%">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for team in teams %}
            <tr style="background-color: {{ team.hexColor }}">
                <td>{{ team.id }}</td>
                <td>{{ team.name }}</td>
                <td><a href="{{ path('team_edit', {'id': team.id}) }}">edit</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
